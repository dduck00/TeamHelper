<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.securitytest.dao.UserDao">

    <select id="selectUserByEmail" parameterType="java.lang.String" resultMap="User">
		SELECT
			user_id as email,
			password
		FROM
			user
		WHERE
			user.user_id == #{email}
	</select>
</mapper>